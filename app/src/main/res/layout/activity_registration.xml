 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
     android:fillViewport="true"
    android:background="#D84040"
    android:padding="16dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:translationY="-90dp"
        android:src="@drawable/reslogoc"/>



    <EditText
        android:id="@+id/username_r"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:translationY="-120dp"
        android:elevation="6dp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/white"
        android:translationY="-185dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:translationY="-100dp">


    <EditText
        android:id="@+id/firstName"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:translationY="-1dp"
        android:padding="12dp"
        android:elevation="2dp"
        android:background="@drawable/edit_text_bg"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:id="@+id/lastName"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:translationY="-1dp"
        android:padding="12dp"
        android:elevation="2dp"
        android:background="@drawable/edit_text_bg"/>
    </LinearLayout>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="First Name"
       android:translationY="-165dp"
       android:translationX="-80dp"
       android:textStyle="bold"
       android:fontFamily="sans-serif-light"
       android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:translationY="-184dp"
        android:translationX="80dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/password_r"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:translationY="-105dp"
        android:elevation="6dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:hint="password"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        android:translationY="-170dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"/>
    <EditText
        android:id="@+id/confirmpassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:translationY="-90dp"
        android:elevation="6dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:hint="password"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="@color/white"
        android:translationY="-155dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"
        />

    <Button
        android:id="@+id/singup_2"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:translationY="-50dp"
        android:background="@drawable/rounded_button_2"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:text="Sign up"
        android:elevation="10dp"
        android:textAllCaps="false"/>

</LinearLayout>