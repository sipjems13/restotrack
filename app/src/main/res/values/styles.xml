<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CustomCalendarView">
        <item name="android:focusedMonthDateColor">@color/black</item>
        <item name="android:unfocusedMonthDateColor">@color/black</item>
        <item name="android:selectedWeekBackgroundColor">#FFF3E0</item>
        <item name="android:weekNumberColor">@color/black</item>
        <item name="android:weekSeparatorLineColor">@color/black</item>
        <item name="android:dateTextAppearance">@style/CalendarDateText</item>
        <item name="android:weekDayTextAppearance">@style/CalendarDateText</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>